<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners 
                 android:radius="3dip" />
             <stroke 
                 android:width="1dip" 
                 android:color="@color/orange_medium" />
             <gradient  
                 android:angle="-90"  
                 android:startColor="@color/GradientBeginClick" 
                 android:endColor="@color/GradientEndClick"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners 
                 android:radius="3dip" />
             <stroke 
                 android:width="1dip" 
                 android:color="@color/orange_light" />
             <solid  
                 android:color="@color/GradientEndNormal"/>
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners 
                 android:radius="3dip" />
             <stroke 
                 android:width="1dip" 
                 android:color="@color/gray_dark" />
             <gradient  
                 android:angle="-90"  
                 android:startColor="@color/GradientBeginNormal" 
                 android:endColor="@color/GradientEndNormal" />            
         </shape>
     </item>
</selector>